<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="application.controllers.RegisterController" stylesheets="@../styles/register.css" fx:id="container" alignment="CENTER">
        <Label text="Create a new account" styleClass="title"/>
        <TextField fx:id="usernameField" promptText="Username" styleClass="input-field"/>
        <PasswordField fx:id="passwordField" promptText="Password" styleClass="input-field"/>

        <HBox spacing="10" alignment="CENTER">
            <Button fx:id="registerButton" text="Register" styleClass="btn"/>
            <Button fx:id="backButton" text="Back to Login" styleClass="btn"/>
        </HBox>
</VBox>
