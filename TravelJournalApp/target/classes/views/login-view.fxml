<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="application.controllers.LoginController" spacing="20" fx:id="container" alignment="CENTER">
    <ImageView fx:id="banner" />
    <VBox spacing="10" alignment="CENTER">
        <TextField fx:id="usernameField" promptText="Username" styleClass="input-field" maxWidth="200" />
        <PasswordField fx:id="passwordField" promptText="Password" styleClass="input-field" maxWidth="200" />
    </VBox>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="loginButton" text="Login" styleClass="btn"/>
        <Button fx:id="registerButton" text="Register" styleClass="btn"/>
    </HBox>
</VBox>
